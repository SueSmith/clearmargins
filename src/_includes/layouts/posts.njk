---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# This is the template for the Posts page–it lists the posts in the collection #}

<div class="wrapper home">
  <div class="content">
  <div class="posts">
    {{ content | safe }}
    {% if collections.posts|length > 0 %}
    <ul>
      {%- for post in collections.posts -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}><img src='{{ post.data.image }}'/><p><a href='{{ post.url }}'>{{ post.data.title }} – {{ post.data.page.date | htmlDateString }}</a><br/>{{ post.data.description }}</p></li>
        
      {%- endfor -%}
    </ul>
    {% else %}
    None yet!
    {% endif %}
    </div>
  </div>
</div>