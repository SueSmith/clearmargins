---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The Home page uses this template–it extends the base template #}

<div class="wrapper home">
  <div class="content">
    <div class="intro">
    {{ content | safe }}
    </div>
    <div class="post">
    <h2>
    <a class="homelink" href='{{ collections.posts[0].url }}'>{{ collections.posts[0].data.title }}</a></h2>
    <p><em>{{ collections.posts[0].data.page.date | htmlDateString }}</em></p>
    {{ collections.posts[0].templateContent | safe }}
    </div>
    <div class="more">
    <h3>More posts</h3>
    {% if collections.posts|length > 1 %}
    <ul>
      {%- for post in collections.posts.slice(1,5) -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}><a href='{{ post.url }}'>{{ post.data.title }} – {{ post.data.page.date | htmlDateString }}</a><p>{{ post.data.description }}</p></li>
      {%- endfor -%}
      <li><a href="/posts">View all posts</a></li>
    </ul>
    {% else %}
    None yet!
    {% endif %}
    </div>
  </div>
</div>
